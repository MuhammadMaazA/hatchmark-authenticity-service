# Hatchmark Environment Configuration
# Copy this file to environment.env and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Project Configuration
PROJECT_NAME=hatchmark
ENVIRONMENT=dev

# S3 Buckets (will be created by CloudFormation)
S3_INGESTION_BUCKET=hatchmark-ingestion-bucket-dev-123456789012
S3_PROCESSED_BUCKET=hatchmark-processed-bucket-dev-123456789012

# QLDB Configuration
QLDB_LEDGER_NAME=hatchmark-ledger-dev

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/hatchmark-watermarking-queue-dev

# API Gateway
API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com

# Lambda Functions (will be created by CloudFormation)
LAMBDA_GENERATE_URL=hatchmark-generatePresignedUrl-dev
LAMBDA_COMPUTE_PHASH=hatchmark-computePhash-dev
LAMBDA_WRITE_LEDGER=hatchmark-writeToLedger-dev
LAMBDA_VERIFY_ARTWORK=hatchmark-verifyArtwork-dev

# ECR Repository
ECR_REPOSITORY=hatchmark-watermarker

# Fargate Configuration
FARGATE_CLUSTER=hatchmark-cluster-dev
FARGATE_SERVICE=hatchmark-watermarker-service-dev
FARGATE_TASK_DEFINITION=hatchmark-watermarker-task-dev

# Security Configuration
CORS_ALLOWED_ORIGINS=*
MAX_FILE_SIZE_MB=10

# Development Configuration
LOCAL_TESTING=true
DEBUG_MODE=true
LOG_LEVEL=INFO

# Cost Management
BUDGET_ALERT_THRESHOLD_USD=10
BUDGET_LIMIT_USD=50

# Performance Targets
TARGET_NOTARIZATION_TIME_SECONDS=60
TARGET_VERIFICATION_TIME_SECONDS=2
TARGET_COST_PER_TRANSACTION_USD=0.01

# Feature Flags
ENABLE_STEGANOGRAPHY=true
ENABLE_PERCEPTUAL_HASH=true
ENABLE_WATERMARK_EXTRACTION=true
ENABLE_DETAILED_LOGGING=false

# Third-party Integrations (for future features)
# COGNITO_USER_POOL_ID=
# COGNITO_CLIENT_ID=
# CLOUDFRONT_DISTRIBUTION_ID=
# ROUTE53_HOSTED_ZONE_ID=