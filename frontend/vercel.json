{
  "version": 2,
  "name": "hatchmark-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@hatchmark-api-url"
    }
  },
  "functions": {
    "app/page.tsx": {
      "maxDuration": 30
    }
  }
}
