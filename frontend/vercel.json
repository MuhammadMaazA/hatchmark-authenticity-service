{
  "version": 2,
  "name": "hatchmark-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_ENV": "production",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_GATEWAY_URL": "@hatchmark-api-gateway-url",
      "NEXT_PUBLIC_AWS_REGION": "@hatchmark-aws-region",
      "NEXT_PUBLIC_INGESTION_BUCKET": "@hatchmark-ingestion-bucket",
      "NEXT_PUBLIC_PROCESSED_BUCKET": "@hatchmark-processed-bucket"
    }
  },
  "functions": {
    "app/page.tsx": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.amazonaws.com https://*.execute-api.*.amazonaws.com;"
        }
      ]
    }
  ]
}
